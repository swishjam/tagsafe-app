<div class='row subscription-packages-headers'>
  <div class='col-2'>
  </div>
  <div class='col-10'>
    <div class='row'>
      <div class='col-3 subscription-package-header-container' data-column='1'>
        <div class='d-flex align-items-stretch justify-content-evenly flex-column h-100'>
          <div class='subscription-package-title'>Starter</div>
          <div class='subscription-package-amount-header monthly-billing-only <%=current_billing_interval.to_sym == SubscriptionPlan::BillingIntervals.YEAR ? 'hidden' : nil %>'>
            <%= SubscriptionPlan.price_for(
              package: SubscriptionPlan::Packages.STARTER, 
              billing_interval: SubscriptionPlan::BillingIntervals.MONTH, 
              friendly: true
            ) %> / month
          </div>
          <div class='subscription-package-amount-header annual-billing-only <%=current_billing_interval.to_sym == SubscriptionPlan::BillingIntervals.MONTH ? 'hidden' : nil %>'>
            <%= SubscriptionPlan.price_for(
              package: SubscriptionPlan::Packages.STARTER, 
              billing_interval: SubscriptionPlan::BillingIntervals.YEAR, 
              friendly: true, 
              display_as_monthly: true
            ) %> / month
          </div>
          <div class='subscription-package-amount-sub-header annual-billing-only'>(billed annually)</div>
          <div class='subscription-package-amount-sub-header mt-3'>
            Best for users with: 
            <ul>
              <li>Less than 10 tags</li>
              <li>Runs nightly performance audits.</li>
            </ul>
          </div>
          <%= render 'subscription_plans/form', 
                          package: SubscriptionPlan::Packages.STARTER,
                          billing_interval: SubscriptionPlan::BillingIntervals.YEAR, 
                          hidden: current_billing_interval.to_s != SubscriptionPlan::BillingIntervals.YEAR.to_s %>
          <%= render 'subscription_plans/form', 
                          package: SubscriptionPlan::Packages.STARTER,
                          billing_interval: SubscriptionPlan::BillingIntervals.MONTH, 
                          hidden: current_billing_interval.to_s != SubscriptionPlan::BillingIntervals.MONTH.to_s %>
        </div>
      </div>
      <div class='col-3 subscription-package-header-container' data-column='2'>
        <div class='d-flex align-items-stretch justify-content-evenly flex-column h-100'>
          <div class='subscription-package-title'>Scale</div>
          <div class='subscription-package-amount-header monthly-billing-only <%=current_billing_interval.to_sym == SubscriptionPlan::BillingIntervals.YEAR ? 'hidden' : nil %>'>
            <%= SubscriptionPlan.price_for(
              package: SubscriptionPlan::Packages.SCALE, 
              billing_interval: SubscriptionPlan::BillingIntervals.MONTH, 
              friendly: true
            ) %> / month
          </div>
          <div class='subscription-package-amount-header annual-billing-only <%=current_billing_interval.to_sym == SubscriptionPlan::BillingIntervals.MONTH ? 'hidden' : nil %>'>
            <%= SubscriptionPlan.price_for(
                package: SubscriptionPlan::Packages.SCALE, 
                billing_interval: SubscriptionPlan::BillingIntervals.YEAR, 
                friendly: true, 
                display_as_monthly: true
              ) %> / month
          </div>
          <div class='subscription-package-amount-sub-header annual-billing-only'>(billed annually)</div>
          <%= render 'subscription_plans/form', 
                          package: SubscriptionPlan::Packages.SCALE, 
                          billing_interval: SubscriptionPlan::BillingIntervals.YEAR, 
                          hidden: current_billing_interval.to_s != SubscriptionPlan::BillingIntervals.YEAR.to_s %>
          <%= render 'subscription_plans/form', 
                          package: SubscriptionPlan::Packages.SCALE, 
                          billing_interval: SubscriptionPlan::BillingIntervals.MONTH, 
                          hidden: current_billing_interval.to_s != SubscriptionPlan::BillingIntervals.MONTH.to_s %>
        </div>
      </div>
      <div class='col-3 subscription-package-header-container' data-column='3'>
        <div class='d-flex align-items-stretch justify-content-evenly flex-column h-100'>
          <div class='subscription-package-title'>Pro</div>
          <div class='subscription-package-amount-header monthly-billing-only <%=current_billing_interval.to_sym == SubscriptionPlan::BillingIntervals.YEAR ? 'hidden' : nil %>'>
            <%= SubscriptionPlan.price_for(
              package: SubscriptionPlan::Packages.PRO, 
              billing_interval: SubscriptionPlan::BillingIntervals.MONTH, 
              friendly: true
            ) %> / month
          </div>
          <div class='subscription-package-amount-header annual-billing-only <%=current_billing_interval.to_sym == SubscriptionPlan::BillingIntervals.MONTH ? 'hidden' : nil %>'>
            <%= SubscriptionPlan.price_for(
                package: SubscriptionPlan::Packages.PRO, 
                billing_interval: SubscriptionPlan::BillingIntervals.YEAR, 
                friendly: true, 
                display_as_monthly: true
              ) %> / month
          </div>
          <div class='subscription-package-amount-sub-header annual-billing-only'>(billed annually)</div>
          <%= render 'subscription_plans/form', 
                          package: SubscriptionPlan::Packages.PRO, 
                          billing_interval: SubscriptionPlan::BillingIntervals.YEAR, 
                          hidden: current_billing_interval.to_s != SubscriptionPlan::BillingIntervals.YEAR.to_s %>
          <%= render 'subscription_plans/form', 
                          package: SubscriptionPlan::Packages.PRO, 
                          billing_interval: SubscriptionPlan::BillingIntervals.MONTH, 
                          hidden: current_billing_interval.to_s != SubscriptionPlan::BillingIntervals.MONTH.to_s %>
        </div>
      </div>
      <div class='col-3 subscription-package-header-container' data-column='4'>
        <div class='d-flex align-items-stretch justify-content-evenly flex-column h-100'>
          <div class='subscription-package-title'>Enterprise</div>
          <div class='subscription-package-amount-header'>Contact for pricing</div>
          <div class='d-flex justify-content-center'>
            <%= link_to 'Contact for pricing', contact_us_path(reason: 'pricing'), class: 'floating-btn large' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
