<div class='row subscription-packages-headers'>
  <div class='col-2'>
  </div>
  <div class='col-10'>
    <div class='row'>
      <div class='col-3 subscription-package-header-container' data-column='1'>
        <div class='d-flex align-items-stretch justify-content-evenly flex-column h-100'>
          <div class='subscription-package-title'>Starter</div>
          <div class='subscription-package-amount-header'>Free</div>
          <%= render 'subscription_plans/form', package: SubscriptionPlan::Packages.STARTER, billing_interval: SubscriptionPlan::BillingIntervals.YEAR, hidden: current_billing_interval.to_s != SubscriptionPlan::BillingIntervals.YEAR.to_s %>
