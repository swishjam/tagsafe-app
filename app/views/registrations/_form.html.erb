  <%= form_with model: user, url: registrations_path, data: { controller: 'loading_form' } do |f| %>
    <% if local_assigns[:container] %>
      <div class='form-floating m-2'>
        <input type='hidden' name="container_uid" value="<%=container.uid%>">
        <input type="text" class="form-control" value="<%=container.name%>" disabled="true">
        <label>Site URL</label>
      </div>
    <% end %>
    <div class='form-floating m-2'>
      <%= f.text_field :first_name, class: 'form-control', placeholder: 'John', required: true %>
      <%= f.label :first_name %>
    </div>
    <div class='form-floating m-2'>
      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Smith', required: true %>
      <%= f.label :last_name %>
    </div>
    <div class='form-floating m-2'>
      <%= f.email_field :email, class: 'form-control', placeholder: 'john@example.com', required: true %>
      <%= f.label :email %>
    </div>
    <div class='form-floating m-2'>
      <%= f.password_field :password, class: 'form-control', placeholder: 'password', required: true %>
      <%= f.label :password %>
    </div>
    <%= render 'partials/inline_errors', errors: local_assigns[:errors] %>
    <%= loading_submit_button type: 'floating', button_class: 'large mb-3' do %>
      <%= local_assigns[:button_text] || 'Get Started' %>
      <% if local_assigns[:button_icon_klass] %>
        <i class="<%= button_icon_klass %>"></i>
      <% end %>
    <% end %>
    <div class='row'>
      <% if local_assigns[:container] %>
        <%= link_to 'Login', "#{login_path}?container=#{container.uid}" %>
      <% else %>
        <%= link_to 'Login', login_path %>
      <% end %>
    </div>
  <% end %>
