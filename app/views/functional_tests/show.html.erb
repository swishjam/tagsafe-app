<%= turbo_stream_from "functional_test_#{@functional_test.uid}_show_view_stream" %>

<div class='page-title-container'>
  <div class='container-fluid'>
    <div class='row'>
      <div class='col-8'>
        <h1 class="page-title with-sub-title"><%= @functional_test.title %></h1>
        <h2 class='page-sub-title'><%= @functional_test.description %></h2>
      </div>
      <div class='col-4 page-title-cta-container'>
        <%= link_to new_functional_test_path, class: 'page-title-cta-btn floating-btn tagsafe-purple-bg' do %>
          <i class="fa-solid fa-plus"></i>
          New test
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'nav' %>
</div>

<%= render 'show', functional_test: @functional_test %>