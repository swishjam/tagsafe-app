<!DOCTYPE html>
<html>
  <head>
    <title>TagSafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%
=begin%>
 <%= stylesheet_link_tag    'application', media: 'all' %> 
<%
=end%>
    <%= stylesheet_link_tag    'purgatory', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/css/bootstrap-select.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/js/bootstrap-select.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script>
      window.currentUser = "<%= current_user&.email %>"
      window.currentDomainId = "<%= current_domain&.id %>"
      window.scriptSubscriberId = "<%= @script_subscriber&.id %>"
      window.scriptSubscribersIds = "<%= @script_subscriptions&.collect(&:id) %>"
    </script>
  </head>

  <body class="<%=controller_name%>">
    <div class="container-fluid">
      <div class="toast js-toast hide" style="min-width: 200px; position: absolute; top: 0; right: 10px; z-index: 10000">
        <div class="toast-header">
          <i class="far fa-check-circle" style="color: green"></i>
          <strong class="mr-auto header"></strong>
          <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="toast-body"></div>
      </div>
      <% if flash[:toast_errors] && flash[:toast_errors].any? %>
        <% flash[:toast_errors].each do |err| %>
          <%= render partial: 'partials/toast_message', locals: { 
            icon_class: 'fas fa-exclamation-triangle', 
            icon_color: 'red', 
            header: nil, 
            margin_top: '10px', 
            message: err 
          } %>
        <% end %>
      <% end %>
      <% if flash[:toast_messages] && flash[:toast_messages].any? %>
        <% flash[:toast_messages].each do |msg| %>
          <%= render partial: 'partials/toast_message', locals: { 
            icon_class: 'far fa-check-circle', 
            icon_color: 'green', 
            header: nil, 
            margin_top: '10px', 
            message: msg } %>
        <% end %>
      <% end %>
      <%= render partial: current_user.nil? ? 'partials/logged_out_nav' : 'partials/logged_in_nav' %>
      <%= render partial: 'partials/breadcrumbs' %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
  <%= javascript_include_tag "https://cdn.quantummetric.com/qscripts/quantum-collin.js", async: true %> 
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-GSZ6G0R2K4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-GSZ6G0R2K4');
    </script>
  </body>
</html>