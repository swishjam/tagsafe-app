<!DOCTYPE html>
<html>
  <head>
    <title>Tagsafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= turbo_include_tags %>
    <%= stimulus_include_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= favicon_link_tag asset_path('/tagsafe-logo.svg') %>
    <script src='/chartkick.js'></script>
    <script src='/highcharts.js'></script>
    
    <%= render 'partials/assets' %>
    <%= yield :head %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="slack-app-id" content="A01HGPB713N">
  </head>
  <body class="logged-in <%=controller_name%> <%= action_name %>">
    <div class="container-fluid">
      <%= render 'partials/notification_containers' %>
      <%= render 'partials/server_loadable_modal' %>
      <%= render 'partials/confirmation_modal' %>
      <%= render 'partials/logged_in_nav' %>
      <div id="content" class="<%= @collapsed_navigation ? 'collapsed-navigation' : @hide_navigation ? 'no-navigation' : nil %>">
        <%= render 'partials/breadcrumbs' %>
        <div id="inner-content" class="col-12">
          <%= yield %>
        </div>
      </div>
    </div>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-GSZ6G0R2K4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-GSZ6G0R2K4');
    </script>
  </body>
</html>