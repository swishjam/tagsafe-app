<!DOCTYPE html>
<html>
  <head>
    <title>TagSafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('TagSafe-lock.png') %>
    <!-- Bootstrap Select: -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta/dist/css/bootstrap-select.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta/dist/js/bootstrap-select.min.js"></script>
    <!-- Fonts: -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="slack-app-id" content="A01HGPB713N">
    <script>
      window.currentUser = "<%= current_user&.email %>"
      window.currentDomainId = "<%= current_domain&.id %>"
      window.scriptSubscriberId = "<%= @tag&.id %>"
      window.scriptSubscribersIds = "<%= @tags&.is_third_party_tag&.still_on_site&.collect(&:id) %>"
    </script>
  </head>
  <body class="logged-in <%=controller_name%>">
    <div class="container-fluid">
      <%= render partial: 'partials/toasts' %>
      <% unless @hide_navigation %>
        <%= render partial: 'partials/logged_in_nav' %>
      <% end %>
      <div id="content" class="<%= @hide_navigation ? 'full-width' : 'with-navigation' %>">
        <%= render partial: 'partials/breadcrumbs' %>
        <div id="inner-content" class="col-12">
          <%= yield %>
        </div>
      </div>
    </div>
    <%
=begin%>
 <%= javascript_include_tag "https://cdn.quantummetric.com/qscripts/quantum-collin.js", async: true %> 
<%
=end%>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-GSZ6G0R2K4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-GSZ6G0R2K4');
    </script>
  </body>
</html>