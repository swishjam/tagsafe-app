    <meta property="og:title" content="Tagsafe" />
    <meta property="og:description" content="Take back control of your third party tags." />
    <meta property="og:image" content="https://www.tagsafe.io/images/tagsafe-logo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>Tagsafe</title>
    <%= turbo_include_tags %>
    <%= stimulus_include_tags %>

    <script src="https://kit.fontawesome.com/d38fe451ee.js" crossorigin="anonymous"></script>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
