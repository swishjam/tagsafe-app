<!DOCTYPE html>
<html>
  <head>
    <title>Tagsafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= turbo_include_tags %>
    <%= stimulus_include_tags %>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <script src='/chartkick.js'></script>
    <script src='/highcharts.js'></script>
    <script src='/codemirror.min.js' type='text/javascript'></script>
    <script src='/codemirror.js' type='text/javascript'></script>
    <script src='/codemirror-active-line.js' type='text/javascript'></script>
    <script src='codemirror-matchbrackets.js' type='text/javascript'></script>
    <link href='/codemirror.min.css' rel='stylesheet' type='text/css'>
    <%= favicon_link_tag asset_cdn_url('/tagsafe-logo.svg') %>
    <!-- Fonts: -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body class="<%=controller_name%>">
    <div class="container-fluid admin-container">
      <%= render 'partials/notification_containers' %>
      <%= render 'partials/top_level_nav_bar' %>
      <%= render 'partials/banner_messages' %>
      <%= render 'partials/admin_nav' %>
      <div id="content" style='margin-top: 75px; padding: 25px; background: white;'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
