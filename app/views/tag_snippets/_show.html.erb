        <div class="mt-6 hidden min-w-0 flex-1 sm:block 2xl:hidden">
          <h1 class="truncate text-2xl font-bold text-gray-900 cursor-default">
            <%= tag_snippet.name %>

            <% if tag_snippet.live? %>
              <span class="ml-4 inline-flex items-center rounded-full bg-green-100 px-3 py-0.5 text-sm font-medium text-green-800 cursor-default" data-controller='tooltip' title='Tag is live'>Live</span>
            <% elsif tag_snippet.draft? %>
              <span class="ml-4 inline-flex items-center rounded-full bg-gray-100 px-3 py-0.5 text-sm font-medium text-gray-800 cursor-default" data-controller='tooltip' title='Tag is in draft mode, set live using the `set live` button below'>Draft</span>
            <% elsif tag_snippet.paused? %>
              <span class="ml-4 inline-flex items-center rounded-full bg-blue-100 px-3 py-0.5 text-sm font-medium text-blue-800 cursor-default" data-controller='tooltip' title='Tag is paused, unpause using the button below'>Paused</span>
            <% elsif tag_snippet.deleted? %>
              <span class="ml-4 inline-flex items-center rounded-full bg-red-100 px-3 py-0.5 text-sm font-medium text-red-800 cursor-default" data-controller='tooltip' title='Tag has been removed and is not live'>Removed</span>
            <% end %>

          </h1>
        </div>
      </div>
    </div>

    <div class='px-4 sm:px-6 lg:px-8 sm:mt-6 lg:mt-8' data-controller="accordion">
      <p class="text-sm text-gray-700 md:space-x-1 space-y-1 md:space-y-0 mb-1">
        <span class='cursor-pointer' data-action='click->accordion#toggleAccordion'>
          <svg class="inline w-4 h-4" data-accordion-target='openStateChevron' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
          <span data-accordion-target='closedText'>
            Show tag snippet
          </span>
          <span class='hidden' data-accordion-target='openedText'>
            Hide tag snippet
          </span>
        </span>
      </p>
      <div class="hidden" data-accordion-target='accordionDiv'>
        <!-- Code Snippet Code Editor -->
