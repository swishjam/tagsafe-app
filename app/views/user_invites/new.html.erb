<div class="col-md-4 offset-md-4 card tag-safe-container text-center">
  <h5>Invite users to <%= current_organization.name %></h5>
  <%= form_for @user_invite do |f| %>
    <div class="form-group">
      <%= f.text_field :email %>
    </div>
    <%= f.submit 'Invite', class: 'tag-safe-button' %>
  <% end %>
</div>

<% @organization_users.each do |ou| %>
  <h5><%= ou.user.email %> <%= link_to 'X', organization_user_path(ou), method: :delete %>
<% end %>