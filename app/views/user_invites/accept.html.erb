<div class="row align-items-center viewport-height">
  <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 card accept-invite-card text-center">
    <h4>Join <%= @user_invite.organization.name %> on TagSafe.</h4>
    <% if flash[:inline_errors] %>
      <% flash[:inline_errors].each do |err| %>
        <span class="error"><%= err %></span>
      <% end %>
    <% end %>
    <%= form_for @user, url: redeem_invite_path(@user_invite.token) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, value: @user_invite.email %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'password' %>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-outline-primary' %>
    <% end %>
  </div>
</div>