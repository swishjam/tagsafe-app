<div class="col-md-4 offset-md-4 card login-card text-center">
  <h4>Join <%= @user_invite.organization.name %> on TagSafe.</h4>
  <%= form_for @user, url: redeem_invite_path(@user_invite.token) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, value: @user_invite.email %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'password' %>
    </div>
    <%= f.submit 'Submit', class: 'tag-safe-button' %>
  <% end %>
</div>