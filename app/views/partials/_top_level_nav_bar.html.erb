<% unless @hide_navigation %>
  <nav class="bg-white border-b ">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">

      <div class="flex h-16 justify-between">
        <div class="flex">
          <div class="flex flex-shrink-0 items-center">
            <%= link_to root_path do %>
              <%= image_tag asset_cdn_url('/tagsafe-logo.svg'), class: 'block h-8 w-auto' %>
            <% end %>
          </div>

          <nav class="flex ml-4" aria-label="Breadcrumb">
            <% if @breadcrumbs && @breadcrumbs.any? %>
              <ol role="list" class="flex items-center space-x-4">

                <% @breadcrumbs.each_with_index do |crumb, i| %>
                  <li>
                    <div class="flex items-center">
                      <!-- Heroicon name: mini/chevron-right -->
                      <% if i > 0 %>
                        <svg class="h-5 w-5 flex-shrink-0 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                          <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                        </svg>
                      <% end %>

                      <% if crumb[:url] %>
                        <%= link_to crumb[:text], crumb[:url], :class => "ml-4 text-sm font-medium text-gray-500 hover:text-blue-500" %>
                      <% else %>
                        <span class="ml-4 text-sm font-medium text-gray-500 cursor-default">
                          <%= crumb[:text] %>
                        </span>
                      <% end %>
                    </div>
                  </li>
                <% end %>

              </ol>
            <% end %>
          </nav>
        </div>


        <!--
        <%# if !user_is_anonymous? && current_user.belongs_to_multiple_containers? %>
          <div class='dropdown-divider'></div>
          <%# current_user.containers.each do |container| %>
            <div class='dropdown-item text-center <%#= container == current_container ? 'active' : nil %>'>
              <%# if container == current_container %>
                <%#= container.name %>
              <%# else %>
                <%#= form_with model: container, url: update_current_container_path(container.uid), method: :put do |f| %>
                  <span data-controller='feaux_form_submit_button'><%#= container.name %></span>
                <%# end %>
              <%# end %>
            </div>
          <%# end %>
        <%# end %>
        -->






        <div class="sm:ml-6 sm:flex sm:items-center">
          <!--  -->
        <div
          data-controller="dropdown"
          class="relative inline-block text-left">
          <div>
            <button
                data-action="click->dropdown#toggle"
                type="button"
                class="flex items-center rounded-full bg-gray-100 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-100"
                id="menu-button"
                aria-expanded="true"
                aria-haspopup="true"
              >
              <span class="sr-only">Open options</span>
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z" />
              </svg>
            </button>
          </div>

          <!--
            Dropdown menu, show/hide based on menu state.

            Entering: "transition ease-out duration-100"
            From: "transform opacity-0 scale-95"
            To: "transform opacity-100 scale-100"
            Leaving: "transition ease-in duration-75"
            From: "transform opacity-100 scale-100"
            To: "transform opacity-0 scale-95"
          -->
          <div class="absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none transition ease-in-out opacity-0 hidden" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1" role="none">
              <%= link_to 'Sign out', logout_path, class: 'text-gray-700 block px-4 py-2 text-sm hover:text-blue-500', target: '_top' %>
            </div>
          </div>
        </div>

        </div>
      </div>

      <!-- Navigation Tabs -->
      <div class="mt-6 sm:flex sm:space-x-8">
        <% navigation_items && navigation_items.each do |nav| %>
          <% is_active = nav[:active] || request.path == URI.parse(nav[:url]).path %>
          <%= link_to is_active ? '#' : nav[:url], class: 'no-decoration' do %>
            <span class='inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 pb-2 <%= is_active ? 'border-b border-blue-500 cursor-default text-blue-500' : 'hover:text-blue-500' %>'>
              <%= nav[:text] %>
            </span>
          <% end %>
        <% end %>
        <% if !navigation_items %>
          <span class='inline-flex items-center px-1 pt-1 text-sm pb-2' >&#12644;</span>
        <% end %>
      </div>

    </div>
  </nav>
<% end %>
