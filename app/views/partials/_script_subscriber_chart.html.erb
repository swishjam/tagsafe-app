<div class="script-subscriber-chart-container">
  <div class="row">
    <div class="col-6">
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="chart-type" id="impact" value="impact" checked>
        <label class="form-check-label" for="impact">Tag Impact</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="chart-type" id="compare" value="compare">
        <label class="form-check-label" for="compare">With vs Without Tag</label>
      </div>
    </div>
    <div class="col-6 text-right">
      <select class="selectpicker" id="chart-metrics-dropdown" multiple data-live-search="true">
        <% PerformanceAuditMetricType.all.each do |metric_type| %>
          <option value="<%= metric_type.key %>" 
                  data-metric-unit="<%=metric_type.unit%>" 
                  <%= metric_type.key === 'DOMComplete' ? 'selected' : nil %>>
                    <%= metric_type.title %>
          </option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="row">
    <%= 
      line_chart script_subscriber_chart_path(script_subscriber),
        download: true, 
        code: true, 
        title: 'DOM Complete Impact Over Time',
        ytitle: 'DOM Complete Impact (ms)',
        xtitle: 'Script Change',
        curve: false,
        messages: { empty: "No Audits Ran." } 
    %>
  </div>
</div>