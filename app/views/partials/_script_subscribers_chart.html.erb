<% if include_metric_select %>
  <div style='float: right;'>
    <select class="selectpicker" id="metric-dropdown" data-max-options="1" data-live-search="true">
      <% PerformanceAuditMetricType.all.each do |metric_type| %>
        <% if metric_type == default_metric_type %>
          <option value="<%= metric_type.key %>" data-metric-unit="<%=metric_type.unit%>" selected><%= metric_type.title %></option>
        <% else %>
          <option value="<%= metric_type.key %>" data-metric-unit="<%=metric_type.unit%>"><%= metric_type.title %></option>
        <% end %>
      <% end %> 
    </select>
  </div>
<% end %>
<div id="scripts-chart-container">
  <%=
    line_chart domain_script_subscribers_chart_path(current_domain, script_subscriber_ids: script_subscriber_ids, metric_type: default_metric_type.key),
      download: true, 
      title: "#{default_metric_type.title}",
      ytitle: "#{default_metric_type.title} #{default_metric_type.unit ? "(#{default_metric_type.unit})" : nil }",
      xtitle: 'Tag Changes',
      code: true,
      messages: { empty: "No Audits Run." },
      curve: false, 
      legend: "bottom",
      library: {
        rangeSelector: true,
        hAxis: { 
          # format: 'MM-DD-YYYY' 
          }
      }
  %>
</div>