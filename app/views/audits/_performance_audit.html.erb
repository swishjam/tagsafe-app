<%= turbo_frame_tag "audit_#{audit.uid}_performance_audit" do %>
  <div class="col-10 offset-1 text-center tagsafe-container <%= local_assigns[:streamed] ? 'tagsafe-illuminate' : nil %>">
    <% if !audit.include_performance_audit %>
      <h6>Performance audits were disabled for this audit</h6>
    <% else %>
      <div class="row">
        <div class="col-12">
          <% if audit.is_primary? %>
            <%= link_to tag_tag_version_audits_path(tag, tag_version) do %>
              <span data-controller='tooltip'
                    data-bs-toggle="tooltip"
                    data-placement="right"
                    title="This tag version of <%=tag.try_friendly_name%> has <%=tag_version.audits.count%> audits performed on it. This is the primary audit, 
                    which is used in comparisons and calculations between tag versions. Click this badge to edit the primary audit."
                    class="badge bg-info"
                    style="float: left;">
                <i class="far fa-star"></i>
              </span>
            <% end %>
          <% end %>
          <div class='row text-end'>
            <%= render 'tag_versions/dropdown', 
                        tag: tag, 
                        tag_version: tag_version, 
                        audit: audit,
                        exclude_urls: [git_diff_tag_tag_version_path(tag, tag_version)]
            %>
            <!-- <#%= render 'partials/utils/help_tooltip', message: "Tagsafe measures how much impact the tag has on your page performance. The metrics below are how much each performance metric #{tag.try_friendly_name} is responsible for." %> !-->
          </div>
        </div>
      </div>
      <% if audit.performance_audit_failed? %>
        <p>Performance audit failed:</p>
        <p><%= audit.performance_audit_error_message %></p>
        <% audit.individual_performance_audits.failed.each do |perf_audit| %>
          <p><%= perf_audit.error_message %></p>
        <% end %>
      <% elsif audit.performance_audit_pending? %>
        <h5>Performance audit is currently running.</h5>
        <%= display_loading_icon type: :grow %>
        <div class='m-auto text-center w-fit'>
          <%= render 'audits/completion_indicator', audit: audit %>
        </div>
      <% elsif audit.delta_performance_audit %>
        <div data-controller='audit-results-expander'>
          <div class="row">
            <div class='tag-safe-score-container text-center col-12' style='margin-bottom: 15px'>
              <h4>Tagsafe Score</h4>
              <%= render partial: 'partials/progress_ring', 
                          locals: { 
                            score: audit.delta_performance_audit.tagsafe_score,
                            change_in_score: previous_audit ? audit.delta_performance_audit.tagsafe_score - previous_audit.delta_performance_audit.tagsafe_score : nil
                          } 
                %>
            </div>
          </div>
          <div class='row'>
            <div class='col-12 text-start'>
              <b>Impact on Metrics:</b>
            </div>
          </div>
          <div data-audit-results-expander-target='metricsContainer' class="performance-metrics-container minimized">
            <div class="row">
              <%= render partial: 'audits/performance_audit_metric_row', locals: {
                tag: tag, 
                metric_title: 'DOM Complete',
                impact_result: audit.delta_performance_audit.dom_complete,
                previous_impact_result: previous_audit ? previous_audit.delta_performance_audit.dom_complete : nil,
                unit: 'ms',
                previous_timestamp: previous_audit ? previous_audit.enqueued_at : nil
              } %>
              <%= render partial: 'audits/performance_audit_metric_row', locals: {
                tag: tag,
                metric_title: 'DOM Interactive',
                impact_result: audit.delta_performance_audit.dom_interactive,
                previous_impact_result: previous_audit ? previous_audit.delta_performance_audit.dom_interactive : nil,
                unit: 'ms',
                previous_timestamp: previous_audit ? previous_audit.enqueued_at : nil
              } %>
            </div>
            <div class="row">
              <%= render partial: 'audits/performance_audit_metric_row', locals: {
                tag: tag, 
                metric_title: 'First Contentful Paint',
                impact_result: audit.delta_performance_audit.first_contentful_paint,
                previous_impact_result: previous_audit ? previous_audit.delta_performance_audit.first_contentful_paint : nil,
                unit: 'ms',
                previous_timestamp: previous_audit ? previous_audit.enqueued_at : nil
              } %>
              <%= render partial: 'audits/performance_audit_metric_row', locals: {
                tag: tag, 
                metric_title: 'Task Duration Time',
                impact_result: audit.delta_performance_audit.task_duration,
                previous_impact_result: previous_audit ? previous_audit.delta_performance_audit.task_duration : nil,
                unit: 'ms',
                previous_timestamp: previous_audit ? previous_audit.enqueued_at : nil
              } %>
            </div>
            <div class="row">
              <%= render partial: 'audits/performance_audit_metric_row', locals: {
                tag: tag, 
                metric_title: 'Script Duration',
                impact_result: audit.delta_performance_audit.script_duration,
                previous_impact_result: previous_audit ? previous_audit.delta_performance_audit.script_duration : nil,
                unit: 'ms',
                previous_timestamp: previous_audit ? previous_audit.enqueued_at : nil
              } %>
              <%= render partial: 'audits/performance_audit_metric_row', locals: {
                tag: tag, 
                metric_title: 'Layout Duration',
                impact_result: audit.delta_performance_audit.layout_duration,
                previous_impact_result: previous_audit ? previous_audit.delta_performance_audit.layout_duration : nil,
                unit: 'ms',
                previous_timestamp: previous_audit ? previous_audit.enqueued_at : nil
              } %>
            </div>
            <div class='row'>
              <%= render partial: 'audits/performance_audit_metric_row', locals: {
                  tag: tag, 
                  metric_title: 'DOM Content Loaded',
                  impact_result: audit.delta_performance_audit.dom_content_loaded,
                  previous_impact_result: previous_audit ? previous_audit.delta_performance_audit.dom_content_loaded : nil,
                  unit: 'ms',
                  previous_timestamp: previous_audit ? previous_audit.enqueued_at : nil
                } %>
              <div class="metric-row col-md-12 col-lg-6">
                <div class='metric col-12'>
                  <div class='row'>
                    <div class="col-6 metric-title">
                      File Size
                    </div>
                    <div class="col-6 metric-value">
                      <span class="current-value"><%= number_to_human_size(tag_version.bytes) %></span>
                      <div class='additional-details'>
                        <!-- <span><#%= audit.delta_performance_audit.score_impact(:byte_size) %> Score Impact</span> !-->
                        <br/>
                        <% unless tag_version.first_version? %>
                          <% if tag_version.change_in_bytes.zero? %>
                            (No Change)
                          <% else %>
                            <span data-controller='tooltip'
                                  data-bs-toggle="tooltip"
                                  data-placement="top"
                                  title="The previous version of <%= tag.try_friendly_name %>'s 'Impact on File Size' was <%=number_to_human_size(tag_version.previous_version.bytes)%> (<%= previous_audit ? previous_audit.enqueued_at : nil %>)." 
                                  class="<%= tag_version.change_in_bytes.positive? ? 'bad positive' : 'good negative' %>-change change-in-value">
                              <%= tag_version.change_in_bytes.positive? ? '+' : nil %><%= number_to_human_size(tag_version.change_in_bytes) %>
                              (<%= number_with_delimiter(((tag_version.change_in_bytes/tag_version.previous_version.bytes)*100).round(2)) %>%)
                            </span>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if audit.include_performance_audit &&
            audit.performance_audit_with_tag_used_for_scoring&.puppeteer_recording&.captured_successfully? &&
            audit.performance_audit_without_tag_used_for_scoring&.puppeteer_recording&.captured_successfully? %>
    <div class="col-10 offset-1 text-center tagsafe-container <%= local_assigns[:streamed] ? 'tagsafe-illuminate' : nil %> mt-5" data-controller='streamed-script-tag'>
      <%= render 'audits/performance_audit_recordings',
                  performance_audit_with_tag: audit.performance_audit_with_tag_used_for_scoring,
                  performance_audit_without_tag: audit.performance_audit_without_tag_used_for_scoring %>
    </div>
  <% end %>
<% end %>