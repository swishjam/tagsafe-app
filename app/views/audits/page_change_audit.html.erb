<%= render 'show_page_header', page_title: "Page Change Detection" %>


<% if @audit.include_page_change_audit %>
  <div class='tagsafe-container text-center'>
    <% if @audit.page_change_audit_completed? %>
      <h4>Changes made to page's HTML:</h4>
      <%= turbo_frame_tag "audit_#{@audit.uid}_page_change_audit", src: tag_audit_page_change_audit_path(@tag, @audit, @audit.page_change_audit) do %>
        <%= display_loading_spinner %>
      <% end %>
    <% else %>
      <h4>Page change audit is running</h4>
      <%= display_loading_spinner %>
    <% end %>
  </div>
<% else %>
  <div class='text-center p-5'>
    <h4>Page change detection was disabled for this audit.</h4>
  </div>
<% end %>