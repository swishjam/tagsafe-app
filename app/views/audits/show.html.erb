<div class='page-title-container'>
  <div class='container-fluid'>
    <div class='row'>
      <div class='col-8'>
        <div class='d-flex align-items-center'>
          <% if @tag.has_image? %>
            <div class='me-2'>
              <%= image_tag @tag.try_image_url, class: 'tag-thumbnail border' %>
            </div>
          <% end %>
          <div>
            <h1 class="page-title with-sub-title d-flex align-items-center fs-1">
              <%= @tag.try_friendly_name %> audit
            </h1>
            <h2 class='page-sub-title fs-6'><%= @tag.url_based_on_preferences %></h2>
          </div>
        </div>
      </div>
      <div class='col-4 page-title-cta-container'>
        <%= modal_link new_tag_audit_path(@tag), klass: 'page-title-cta-btn floating-btn tagsafe-purple-bg' do %>
          <div class='d-flex align-items-center'>
            Run Audit 
            <span data-controller='hot-keys' data-action="modal" data-key-code='65' class='hot-key-indicator ms-1'>
              <form class='hidden' action="<%=select_tag_to_audit_tags_path%>" data-hot-keys-target='formAction' data-turbo-frame='server_loadable_modal'>
              </form>
              âŒ˜a
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class='col-8 offset-2 mt-4 mb-4'>
  <div class='d-flex justify-content-evenly'>
    <div class='meta-info-pill' data-controller='tooltip' title='When this audit was performed.'>
      <div class='title'>Performed at</div>
      <div class='value'><%= @audit.created_at.formatted_short %></div>
    </div>
    <div class='meta-info-pill' data-controller='tooltip' title='Which page this audit was perfomed on.'>
      <div class='title'>Audited page URL</div>
      <div class='value'><%= @audit.page_url.friendly_url %></div>
    </div>
    <div class='meta-info-pill' data-controller='tooltip' title='Reason the audit was ran.'>
      <div class='title'>Execution reason</div>
      <div class='value'><%= @audit.execution_reason.name %></div>
    </div>
    <% if @audit.execution_reason.manual? %>
      <div class='meta-info-pill' data-controller='tooltip' title='The individual who initiated the audit.'>
        <div class='title'>Executed by</div>
        <div class='value'><%= @audit.initiated_by_container_user.user.email %></div>
      </div>
    <% end %>
  </div>
</div>

<div class='col-sm-8 offset-sm-2 col-md-6 offset-md-3'>
  <%= render 'breakdown', audit: @audit %>
</div>