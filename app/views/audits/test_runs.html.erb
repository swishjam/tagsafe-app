<%= turbo_stream_from "audit_#{@audit.uid}_test_runs_list_view" %>

<%= render 'show_page_header', page_title: "Functional Tests" %>

<% if @audit.include_functional_tests %>
  <%= turbo_frame_tag "audit_#{@audit.uid}_test_runs", src: tag_audit_test_runs_for_audit_path(@tag, @audit) do %>
    <div class='text-center p-5'>
      <%= display_loading_spinner %>
    </div>
  <% end %>
<% else %>
  <div class='text-center p-5'>
    <h4>Functional Tests not run on this audit</h4>
  </div>
<% end %>