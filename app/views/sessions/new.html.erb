
<div class="col-md-4 offset-md-4 card login-card text-center">
  <h1>Login</h1>

  <%= form_for :login do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control form-control-lg", placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control form-control-lg", placeholder: 'Password' %>
    </div>
    <% if flash[:local_error] %>
      <p style="color: #e74d4d"><%= flash[:local_error] %></p>
    <% end %>
    <%= f.submit 'Submit', class: 'btn btn-outline-primary' %>
  <% end %>
</div>