<div class="col-xs-12 offset-xs-0 col-md-8 offset-md-2 col-xl-6 offset-xl-3 card tagsafe-container text-center mt-5">
  <h1>Login</h1>

  <%= form_for :login do |f| %>
    <div class="form-floating m-3">
      <%= f.password_field :email, class: "form-control", placeholder: 'Email' %>
      <%= f.label :email %>
    </div>
    <div class="form-floating m-3">
      <%= f.password_field :password, class: "form-control", placeholder: 'Password' %>
      <%= f.label :password %>
    </div>
    <%= render 'partials/inline_errors' %>
    <%= f.submit 'Login', class: 'tagsafe-btn large' %>
  <% end %>
</div>