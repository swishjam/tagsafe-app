<%= turbo_frame_tag "domain_#{domain.uid}_billing_details" do %>
  <div class='row'>
    <div class='col-6 d-flex align-items-center'>
      <div class='d-block'>
        <span class='settings-title d-block fw-bolder'>Current Plan</span>
        <span class='settings-description d-block'>Your current Tagsafe subscription plan.</span>
      </div>
    </div>
    <div class='col-6 d-flex align-items-center'>
      <div class='d-block'>
        <span class='d-block'><%= domain.subscription_plan.subscription_option.name %></span>
        <span class='d-block'>
          <%= modal_link edit_domain_subscription_option_path(domain), text: 'Change Plan' %>
        </span>
      </div>
    </div>
  </div>

  <hr/>
  <div class='row'>
    <div class='col-6 d-flex align-items-center'>
      <div class='d-block'>
        <span class='settings-title d-block fw-bolder'>Payment method</span>
        <span class='settings-description d-block'>The payment method your Tagsafe charges will incur against.</span>
      </div>
    </div>
    <div class='col-6 d-flex align-items-center'>
      <div class='d-block'>
        <% if default_payment_method %>
          <span class='d-block'><%= default_payment_method.card.brand %> ending in <%= default_payment_method.card.last4 %></span>
          <%= modal_link new_domain_payment_method_path, text: 'Change Payment Method' %>
        <% else %>
          <span class='d-block'>No payment method on file</span>
          <%= modal_link new_domain_payment_method_path, text: 'Add Payment Method' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>