<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-12">
  <div class="grid max-w-3xl grid-cols-1 gap-6 lg:max-w-7xl lg:grid-flow-col-dense lg:grid-cols-4">

    <div class="lg:col-span-1 lg:col-start-1">
      <%= render 'settings/settings_nav', container: @container %>
    </div>
    <div class="space-y-6 lg:col-span-3 lg:col-start-2 border rounded-md p-6">

      <div class="md:flex md:items-center md:justify-between md:space-x-5 w-full">
        <div class="flex items-center space-x-5">
          <h1 class="text-2xl font-medium text-gray-900">Team Management</h1>
        </div>
        <div class="justify-stretch mt-6 flex flex-col-reverse space-y-4 space-y-reverse sm:flex-row-reverse sm:justify-end sm:space-y-0 sm:space-x-3 sm:space-x-reverse md:mt-0 md:flex-row md:space-x-3">
          <%= modal_link_to new_container_user_invite_path(@container), klass: 'inline-flex items-center justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-100' do %>
            Invite teammate
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
            </svg>
          <% end %>
        </div>
      </div>

      <div class=''>
        <h2 class='text-lg font-medium text-gray-900'>Pending invites</h2>
        <%= turbo_frame_tag "container_#{@container.uid}_invites", src: container_user_invites_path(@container) do %>
          <div class='text-center'>
            <%= display_loading_icon %>
          </div>
        <% end %>
      </div>

      <div class=''>
        <h2 class='text-lg font-medium text-gray-900'>Team members</h2>
        <%= turbo_frame_tag "container_#{@container.uid}_container_users", src: container_users_path(@container) do %>
          <div class='text-center'>
            <%= display_loading_icon %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
