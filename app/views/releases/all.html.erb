<%= render 'tags/root_paths_page_navigation', page_title: 'Releases' %>

<div class='d-flex'>
  <div class='col-5'>
    <div class='tagsafe-container'>
      <%= turbo_frame_tag "#{current_container.uid}_release_calendar", src: release_calendar_releases_path(all_tags: true) do %>
        <div class='text-center p-5'>
          <%= display_loading_icon %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='col-7'>
    <div class='tagsafe-container'>
      <h4 class='mb-3'>Recent releases</h4>
      <div class='ps-4 pe-4'>
        <% @tag_versions.each do |tag_version| %>
          <%= render 'tag_versions/tag_version_row', tag_version: tag_version, display_tag_name: true %>
        <% end %>
      </div>
    </div>
  </div>
</div>