<%= turbo_frame_tag "#{@container.uid}_container_tags_container" do %>
  <div class="grid max-w-3xl grid-cols-1 gap-6 lg:max-w-7xl lg:grid-flow-col-dense lg:grid-cols-3">

    <% if tag_snippets.any? %>
      <div class="lg:col-span-1 lg:col-start-1">
        <%= render 'tag_snippets/list', tag_snippets: tag_snippets, container: container %>
      </div>
      <div class="space-y-6 lg:col-span-2 lg:col-start-2 border rounded-md">

        <div class="text-center mt-36 mb-36">
          <svg class="mx-auto h-12 w-12 text-gray-400"  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
          </svg>

          <h3 class="mt-2 text-sm font-medium text-gray-900">Select A Tag</h3>
          <p class="mt-1 text-sm text-gray-500">or add a new tag above</p>
        </div>
      </div>

      </div>
    <% else %>
      <div class='space-y-6 lg:col-span-3 rounded-md text-center border-1 border-dashed'>
        <div class="text-center my-24">
          <svg class="mx-auto h-12 w-12 text-gray-400"  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
          </svg>

          <h3 class="mt-2 text-sm font-medium text-gray-900">You haven't added any tags yet</h3>
        </div>
      </div>
    <% end %>

  </div>
<% end %>
